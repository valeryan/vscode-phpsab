{
  "name": "vscode-phpsab",
  "displayName": "PHP Sniffer & Beautifier",
  "description": "PHP Sniffer & Beautifier for Visual Studio Code",
  "version": "0.0.19",
  "icon": "php_logo.png",
  "publisher": "valeryanm",
  "homepage": "https://github.com/valeryan/vscode-phpsab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/valeryan/vscode-phpsab.git"
  },
  "bugs": {
    "url": "https://github.com/valeryan/vscode-phpsab/issues"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "php",
    "phpcs",
    "phpcbf",
    "linter",
    "fixer"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fixer.fix",
        "title": "PHPCBF: Fix this file",
        "when": "!inOutput && editorFocus && editorLangId == php"
      }
    ],
    "configuration": {
      "title": "PHP Sniffer & Fixer Configuration options",
      "type": "object",
      "properties": {
        "phpsab.debug": {
          "type": "boolean",
          "default": false,
          "description": "Write debug info to the console",
          "order": 1
        },
        "phpsab.composerJsonPath": {
          "scope": "resource",
          "type": "string",
          "default": "composer.json",
          "description": "The path to composer.json",
          "order": 2
        },
        "phpsab.standard": {
          "scope": "resource",
          "type": [
            "string"
          ],
          "default": "",
          "description": "(Optional) The name of a coding standard or the file path to a ruleset file. Can be overridden if auto ruleset search is enabled.",
          "order": 3
        },
        "phpsab.autoRulesetSearch": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Automatically search for a ruleset file to use as configuration. Overrides the default standard defined above if enabled.",
          "order": 4
        },
        "phpsab.allowedAutoRulesets": {
          "scope": "resource",
          "type": "array",
          "default": [
            ".phpcs.xml",
            ".phpcs.xml.dist",
            "phpcs.xml",
            "phpcs.xml.dist",
            "phpcs.ruleset.xml",
            "ruleset.xml"
          ],
          "description": "Filenames to search for that contain the ruleset for fixers.",
          "order": 5
        },
        "phpsab.snifferEnable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Control if this sniffer is enabled for PHP files or not.",
          "order": 6
        },
        "phpsab.snifferExecutablePath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "(Optional) The default path to the phpcs executable. Setting this will disable auto search executable.",
          "order": 7
        },
        "phpsab.snifferArguments": {
          "scope": "resource",
          "type": "array",
          "default": [],
          "description": "Additional arguments passed to phpcs",
          "order": 8
        },
        "phpsab.snifferShowSources": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Control if phpcs report should include sniff sources.",
          "order": 9
        },
        "phpsab.snifferMode": {
          "type": "string",
          "default": "onSave",
          "enum": [
            "onSave",
            "onType"
          ],
          "markdownDescription": "When to run `phpcs`, on save or on typing. This is a global setting and will apply to all workspaces.",
          "order": 10
        },
        "phpsab.snifferTypeDelay": {
          "type": "number",
          "default": 250,
          "minimum": 0,
          "markdownDescription": "When `phpsab.snifferMode` is `onType`, this sets the amount of milliseconds the validator will wait after typing has stopped before it will run. This is a global setting and will apply to all workspaces.",
          "order": 11
        },
        "phpsab.fixerEnable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Control if this fixer is enabled for PHP files or not.",
          "order": 12
        },
        "phpsab.fixerExecutablePath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "(Optional) The default path to the phpcbf executable. Setting this will disable auto search executable.",
          "order": 13
        },
        "phpsab.fixerArguments": {
          "scope": "resource",
          "type": "array",
          "default": [],
          "description": "Additional arguments passed to phpcbf",
          "order": 14
        },
        "phpsab.executablePathCBF": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "DEPRECATED: moved to Fixer Executable Path.",
          "order": 15
        },
        "phpsab.executablePathCS": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "DEPRECATED: moved to Sniffer Executable Path.",
          "order": 16
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-test": "esbuild ./src/**/*.spec.ts --bundle --outdir=out/test --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "pretest": "npm run esbuild && npm run esbuild-test",
    "test": "vscode-test"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.20",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
